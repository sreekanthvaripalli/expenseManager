    {
      "name": "IDOR (Insecure Direct Object Reference) Tests",
      "item": [
        {
          "name": "IDOR - Access Other User's Expense by ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{validToken}}" }],
            "url": { "raw": "{{baseUrl}}/api/expenses/99999", "host": ["{{baseUrl}}"], "path": ["api", "expenses", "99999"] }
          }
        },
        {
          "name": "IDOR - Update Other User's Expense",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Authorization", "value": "Bearer {{validToken}}" }],
            "body": { "mode": "raw", "raw": "{\n  \"amount\": 999999.99,\n  \"date\": \"2024-01-01\",\n  \"description\": \"Hacked expense\",\n  \"categoryId\": {{categoryId}},\n  \"recurring\": false,\n  \"currency\": \"USD\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/expenses/99999", "host": ["{{baseUrl}}"], "path": ["api", "expenses", "99999"] }
          }
        },
        {
          "name": "IDOR - Delete Other User's Expense",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{validToken}}" }],
            "url": { "raw": "{{baseUrl}}/api/expenses/99999", "host": ["{{baseUrl}}"], "path": ["api", "expenses", "99999"] }
          }
        },
        {
          "name": "IDOR - Modify Other User's Budget",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Authorization", "value": "Bearer {{validToken}}" }],
            "body": { "mode": "raw", "raw": "{\n  \"categoryId\": {{categoryId}},\n  \"year\": 2024,\n  \"month\": 1,\n  \"limitAmount\": 0.01,\n  \"currency\": \"USD\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/budgets/99999", "host": ["{{baseUrl}}"], "path": ["api", "budgets", "99999"] }
          }
        },
        {
          "name": "IDOR - Delete Other User's Budget",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{validToken}}" }],
            "url": { "raw": "{{baseUrl}}/api/budgets/99999", "host": ["{{baseUrl}}"], "path": ["api", "budgets", "99999"] }
          }
        },
        {
          "name": "IDOR - Access Other User's Category",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{validToken}}" }],
            "url": { "raw": "{{baseUrl}}/api/categories/99999", "host": ["{{baseUrl}}"], "path": ["api", "categories", "99999"] }
          }
