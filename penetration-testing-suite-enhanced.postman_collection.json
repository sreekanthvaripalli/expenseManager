    {
      "name": "JWT Security Tests",
      "item": [
        {
          "name": "JWT - Token with Null Signature",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer eyJhbGciOiJub25lIn0.eyJzdWIiOiIxMjM0NTY3ODkwIn0." }],
            "url": { "raw": "{{baseUrl}}/api/expenses", "host": ["{{baseUrl}}"], "path": ["api", "expenses"] }
          }
        },
        {
          "name": "JWT - Modified Payload (Admin Claim)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer eyJhbGciOiJIUzI1NiJ9.eyJzdWIiOiIxIiwiYWRtaW4iOiJ0cnVlIn0.signature" }],
            "url": { "raw": "{{baseUrl}}/api/expenses", "host": ["{{baseUrl}}"], "path": ["api", "expenses"] }
          }
        },
        {
          "name": "JWT - Missing Signature Part",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer eyJhbGciOiJIUzI1NiJ9.eyJzdWIiOiIxIn0" }],
            "url": { "raw": "{{baseUrl}}/api/expenses", "host": ["{{baseUrl}}"], "path": ["api", "expenses"] }
          }
        },
        {
          "name": "JWT - Algorithm None Attack",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer eyJhbGciOiJub25lIiwidHlwZSI6IlBST0RVQ1QifQ.eyJzdWIiOiIxIn0." }],
            "url": { "raw": "{{baseUrl}}/api/expenses", "host": ["{{baseUrl}}"], "path": ["api", "expenses"] }
          }
        },
        {
          "name": "JWT - Key Confusion Attack (RS256 to HS256)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer eyJhbGciOiJIUzI1NiJ9.eyJzdWIiOiIxIn0.dummy_signature" }],
            "url": { "raw": "{{baseUrl}}/api/expenses", "host": ["{{baseUrl}}"], "path": ["api", "expenses"] }
          }
